{
  "name": "dianerehmdownloader",
  "version": "1.0.6",
  "main": "main.js",
  "dependencies": {
    "feedparser": "^1.1.3",
    "request": "^2.64.0",
    "topcoat": "0.7.5"
  },
  
  "devDependencies": {
    "electron-prebuilt": "1.2.6",
    "electron-packager": "7.2.0"
  },
  
  "scripts": {
    "build": "npm run build-64 && npm run build-win32 && npm run build-linux32",
    "build-64": "npm run build-mac && npm run build-win && npm run build-linux",
    "build-mac": "electron-packager ./ 'Diane Rehm Downloader' --app-bundle-id=dianerehmdownloader --icon=images/appicon.icns --asar --prune --out=build --overwrite=true --platform=darwin --arch=x64 --version=1.2.6 --app-version=1.0.6",
    "build-win": "electron-packager ./ 'Diane Rehm Downloader' --app-bundle-id=dianerehmdownloader --version-string.FileDescription='Diane Rehm Downloader' --icon=images/appicon.ico --asar --prune --out=build --overwrite=true --platform=win32 --arch=x64 --version=1.2.6 --app-version=1.0.6",
    "build-win32": "electron-packager ./ 'Diane Rehm Downloader' --app-bundle-id=dianerehmdownloader --version-string.FileDescription='Diane Rehm Downloader' --icon=images/appicon.ico --asar --prune --out=build --overwrite=true --platform=win32 --arch=ia32 --version=1.2.6 --app-version=1.0.6",
    "build-linux": "electron-packager ./ 'Diane Rehm Downloader' --app-bundle-id=dianerehmdownloader --asar --prune --out=build --overwrite=true --platform=linux --arch=x64 --version=1.2.6 --app-version=1.0.6",
    "build-linux32": "electron-packager ./ 'Diane Rehm Downloader' --app-bundle-id=dianerehmdownloader --asar --prune --out=build --overwrite=true --platform=linux --arch=ia32 --version=1.2.6 --app-version=1.0.6"
  }
}